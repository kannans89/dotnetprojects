@using SCMProfit.LanguageClasses
@using SCMProfitCore.ResourcesFiles
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Resource.Title</title>
</head>
<body>
    <style>
        .right-inner-addon {
            position: relative;
        }

            .right-inner-addon input {
                padding-right: 30px;
            }

            .right-inner-addon i {
                position: absolute;
                right: 0px;
                padding: 10px 12px;
                pointer-events: none;
            }

        .field-validation-error {
            color: red;
        }

        h1 {
            text-align: center;
            text-shadow: inherit;
            text-decoration: solid;
        }

        h2 {
            text-align: center;
        }

        h3 {
            text-align: right;
        }

        h4 {
            text-align: center;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        .form-control {
            width: 250px;
        }
    </style>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <div style="padding: 5px; background-color: aliceblue">
        <b>@Resource.SelectLanguage:</b> @{
            foreach (var i in SiteLanguage.listOfLanguage)
            {
            <text>|</text>@Html.ActionLink(i.LangFullName, "ChangeLanguage", "Login", new { lang = i.LangCultureName }, null) <text>&nbsp;|</text>
            }
        }

    </div>
    <table style="width: 100%; position: absolute; height: 100%; border-color: black">

        <tr style="background-color: ButtonFace; height: 10%">
            <td>

                <h1 style="font-style: italic; font-variant: initial">@Resource.Title</h1>
            </td>
        </tr>
        <tr style="height: 80%">
            <td style="background-color: #ADD8E6; width: 100%; height: 100%" colspan="4">
                <section>
                    @RenderBody()
                </section>
            </td>
        </tr>
        <tr style="background-color: ButtonFace; height: 10%">
            <td colspan="4">
                <h4>&copy;@Resource.copywrite</h4>
            </td>
        </tr>
    </table>
</body>
</html>

